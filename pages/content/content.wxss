/* pages/content/content.wxss */
page{
    width: 100%;
    height: 100%;
    background-color: #fafafa;
}
.content{
    margin: 20rpx;
    padding: 20rpx;
    background: #fff;
    display: flex;
    flex-flow: column wrap;
}
.content-header{
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    align-items: center;
    font-size: 35rpx;
    margin: 10rpx 0;
}
.content-info{
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
}
.content-info .little-info{
    margin-right: 50rpx;
    font-size: 25rpx;
    color: #525151;
}
.content-cont{
    font-size: 30rpx;
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    margin: 20rpx 0;
}
.content-talkabout{
    font-size: 30rpx;
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
}