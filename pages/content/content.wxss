/* pages/content/content.wxss */
page{
    width: 100%;
    height: 100%;
    background-color: #fafafa;
}
.content{
    margin: 20rpx;
    padding: 20rpx;
    background: #fff;
    display: flex;
    flex-flow: column wrap;
}
.content-header{
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    align-items: center;
    font-size: 35rpx;
    margin: 10rpx 0;
}
.content-info{
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
}
.content-info .little-info{
    margin-right: 50rpx;
    font-size: 25rpx;
    color: #525151;
}
.content-cont{
    font-size: 30rpx;
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    margin: 20rpx 0;
    width: 670rpx;
}
.content-cont text{
    width: 670rpx;
}
.content-talkabout{
    font-size: 30rpx;
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
}
.comment{
    padding-top: 20rpx;
    border-top: 20rpx solid  #fafafa;
}
.comment-avatar{
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: flex-start;
}
.avatar{
    width: 50rpx;
    border: 1px solid #fafafa;
    border-radius: 50%;
    margin: 10rpx 10rpx;
}
.comment-commit{
    font-size: 25rpx;
}
.comment-input{
    border: 1px solid #525151;
    border-radius: 10rpx;
    font-size: 25rpx;
    height: 60rpx;
    width: 75%;
    padding: 0 10rpx;
}
.comment-bottom{
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: space-between;
    margin-top: 20rpx;
}
.comment-bottom button{
    background-color: #1296db;
    font-size: 25rpx;
    padding: 0rpx;
    margin: 10rpx 10rpx;
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
}
