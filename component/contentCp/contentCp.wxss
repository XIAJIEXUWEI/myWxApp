/* component/contentCp/content.wxss */
@import "/static/css/icon.wxss";

.content {
    background-color: #fff;
    font-size: 30rpx;
    color: #525151;
    display: flex;
    flex-flow: column wrap;
    padding: 20rpx;
    margin: 20rpx;
}

.content-header {
    display: flex;
    font-size: 35rpx;
    color: #000;
    flex-flow: row wrap;
    align-items: center;
    justify-content: flex-start;
    padding: 0 10rpx;
}

.content-header text {
    margin-right: 20rpx;
}

.content-con {
    display: flex;
    flex-flow: column wrap;
}

.content-txt {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: flex-start;
    margin: 20rpx 10rpx 0 10rpx;
    max-height: 130rpx;
    overflow: hidden;
}

.content-txt text {
    display: -webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp: 3;
    text-overflow: hidden;
}

.content-inf {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: flex-start;
    padding: 0 10rpx;
}

.content-inf text {
    margin-right: 80rpx;
}

.content-inf button {
    margin-left: -10rpx;
    background-color: #fff;
}

.content-inf button::after {
    border: none;
}
